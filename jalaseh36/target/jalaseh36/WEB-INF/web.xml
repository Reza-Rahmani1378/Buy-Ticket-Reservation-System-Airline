<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>



    <filter>
      <filter-name>BuyTicketFilter</filter-name>
      <filter-class>ir.maktab.home_work17.filter.BuyTicketFilter</filter-class>
    </filter>


  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>ir.maktab.home_work17.filter.LoginFilter</filter-class>
  </filter>

  <filter>
    <filter-name>RegisterFilter</filter-name>
    <filter-class>ir.maktab.home_work17.filter.RegisterFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>BuyTicketFilter</filter-name>
    <url-pattern>/buyTicket.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/selectUser</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>RegisterFilter</filter-name>
    <url-pattern>/RegisterFilter</url-pattern>
  </filter-mapping>


  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>ir.maktab.home_work17.servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ir.maktab.home_work17.servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>ir.maktab.home_work17.servlet.RegisterServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SelectUser</servlet-name>
    <servlet-class>ir.maktab.home_work17.servlet.SelectUser</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SelectUser</servlet-name>
    <url-pattern>/selectUser</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file></welcome-file>
    <welcome-file>buyTicket.jsp</welcome-file>
  </welcome-file-list>
</web-app>
